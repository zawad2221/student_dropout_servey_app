<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/page1Fragment">

    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.example.studentsurvey.fragment.Page1Fragment"
        android:label="fragment_page1"
        tools:layout="@layout/fragment_page1" >
        <action
            android:id="@+id/action_page1Fragment_to_page2Fragment"
            app:destination="@id/page2Fragment"

            />
    </fragment>
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.studentsurvey.fragment.Page2Fragment"
        android:label="fragment_page2"
        tools:layout="@layout/fragment_page2" >
        <action
            android:id="@+id/action_page2Fragment_to_page3Fragment"
            app:destination="@id/page3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page3Fragment"
        android:name="com.example.studentsurvey.fragment.Page3Fragment"
        android:label="fragment_page3"
        tools:layout="@layout/fragment_page3" >
        <action
            android:id="@+id/action_page3Fragment_to_page4Fragment"
            app:destination="@id/page4Fragment"

            />
    </fragment>
    <fragment
        android:id="@+id/page4Fragment"
        android:name="com.example.studentsurvey.fragment.Page4Fragment"
        android:label="fragment_page4"
        tools:layout="@layout/fragment_page4" />
</navigation>